# TruthLens Environment Variables
# Updated: October 20, 2025
# Version: 10.0.0 - Added Live Streaming Configuration

# ============================================================================
# EXISTING API KEYS (DO NOT REMOVE - REQUIRED FOR NEWS/TRANSCRIPT ANALYSIS)
# ============================================================================

# Core API Keys
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_FACT_CHECK_API_KEY=your_google_fact_check_api_key_here
NEWS_API_KEY=your_news_api_key_here

# Enhanced API Keys (Pro Features)
MEDIASTACK_API_KEY=your_mediastack_api_key_here
FRED_API_KEY=your_fred_api_key_here
COPYSCAPE_USERNAME=your_copyscape_username_here
COPYSCAPE_API_KEY=your_copyscape_api_key_here
COPYLEAKS_EMAIL=your_copyleaks_email_here
COPYLEAKS_API_KEY=your_copyleaks_api_key_here
SCRAPERAPI_KEY=your_scraperapi_key_here

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
PORT=5000

# ============================================================================
# DATABASE CONFIGURATION FOR DEBATE ARENA
# ============================================================================

# PostgreSQL Database (for Debate Arena)
# Render provides this automatically - use their DATABASE_URL
# For local development, use:
DATABASE_URL=postgresql://user:password@localhost:5432/truthlens_debates

# OR if Render provides it as separate variables:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=truthlens_debates
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# SQLAlchemy Configuration
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ECHO=False

# ============================================================================
# NEW: LIVE STREAMING CONFIGURATION (v10.0.0)
# ============================================================================

# AssemblyAI API Key (for real-time transcription)
# Sign up for free at: https://www.assemblyai.com/
# Free tier: 100 hours/month
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Live Stream Settings (optional - defaults shown)
# MAX_STREAM_DURATION=7200  # Maximum stream duration in seconds (2 hours default)
# STREAM_CHUNK_SIZE=10  # Audio chunk size in seconds
# TRANSCRIPTION_LANGUAGE=en  # Language code for transcription

# ============================================================================
# EMAIL CONFIGURATION (FOR PRODUCTION - NOT REQUIRED FOR PHASE 1)
# ============================================================================

# SendGrid (for sending verification emails in production)
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# FROM_EMAIL=noreply@truthlens.com

# AWS SES (alternative to SendGrid)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
